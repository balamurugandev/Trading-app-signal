{
  "name": "nse-scalping-signals",
  "version": "1.0.0",
  "description": "Real-time NSE scalping signals for Nifty and Bank Nifty",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:live": "concurrently \"npm run server:live\" \"npm run client\"",
    "server": "nodemon --exec 'node --no-deprecation' server/index.js",
    "server:live": "LIVE_DATA=true nodemon --exec 'node --no-deprecation' server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node --no-deprecation server/index.js",
    "start:live": "node start-live.js",
    "test-api": "node test-api.js",
    "test-yahoo": "node -e \"const YahooFinanceProvider = require('./server/services/yahooFinanceProvider'); const provider = new YahooFinanceProvider(); provider.start().then(() => { setTimeout(() => { provider.stop(); process.exit(0); }, 10000); });\"",
    "debug-live": "node debug-live-mode.js",
    "check-server": "curl -f http://localhost:3001/api/health || echo 'Server not running. Start with: npm run server:live'",
    "kill-server": "node kill-server.js",
    "test:modes": "node test-live-demo-modes.js",
    "test:modes:quick": "./run-mode-tests.sh",
    "restart-server": "npm run kill-server && sleep 2 && npm run server:live",
    "start-fresh": "node start-fresh.js",
    "start-app": "node start-app.js",
    "quick-start": "./start.sh",
    "app": "node reliable-start.js",
    "go": "node start-complete.js",
    "fixed": "node start-fixed.js",
    "debug-server": "node debug-blank-screen.js",
    "test-indicators": "node test-indicators.js",
    "test-advanced": "node test-advanced-live.js",
    "test-advanced-data": "node test-advanced-data.js"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "node-cron": "^3.0.3",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "technicalindicators": "^3.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
