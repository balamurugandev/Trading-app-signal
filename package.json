{
  "name": "nse-scalping-signals",
  "version": "1.0.0",
  "description": "Real-time NSE scalping signals for Nifty and Bank Nifty",
  "main": "server/index.js",
  "scripts": {
    "start": "node start.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "LIVE_DATA=true node --no-deprecation server/index.js",
    "server:dev": "LIVE_DATA=true nodemon --exec 'node --no-deprecation' server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "test": "node tests/test-market-data.js",
    "test:signals": "node tests/test-signal-generation.js",
    "test:live": "node tests/test-live-demo-modes.js",
    "test:indicators": "node tests/test-indicators.js",
    "test:advanced": "node tests/test-advanced-live.js",
    "test:modes": "tests/run-mode-tests.sh",
    "debug": "node debug/debug-live-mode.js",
    "debug:server": "node debug/debug-blank-screen.js",
    "kill-server": "node debug/kill-server.js",
    "check-server": "curl -f http://localhost:3001/api/health || echo 'Server not running. Start with: npm start'"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "node-cron": "^3.0.3",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "technicalindicators": "^3.1.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
